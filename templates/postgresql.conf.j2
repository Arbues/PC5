# Archivo básico de configuración PostgreSQL para replicación
data_directory = '/var/lib/postgresql/12/main'
hba_file = '/etc/postgresql/12/main/pg_hba.conf'
ident_file = '/etc/postgresql/12/main/pg_ident.conf'
external_pid_file = '/var/run/postgresql/12-main.pid'

# Configuración de conexión
listen_addresses = '*'
port = 5432
max_connections = 100

# Memoria
shared_buffers = 128MB

# Configuración de replicación
wal_level = replica
max_wal_senders = 3        # Reducido a un número más conservador
max_replication_slots = 3  # Reducido a un número más conservador
hot_standby = on